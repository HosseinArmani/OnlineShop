@model List<Shop.Domain.Models.Site.UserFavorites>
@{
    ViewData["Title"] = "ShowUserFavorites";
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name=robots content=index,follow>
<title>علاقه مندی ها</title>
<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">
                        @await Component.InvokeAsync("UserSideBar")
                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="table-favorites">
                                    <table class="table ns-table table-profile-favorites">
                                        <thead>
                                            <tr>
                                                <th scope="col" width="50"> </th>
                                                <th scope="col">نام محصول</th>
                                                <th scope="col">قیمت</th>
                                                <th class="actions-th"></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var favorites in Model)
                                            {
                                                <tr>
                                                    <th scope="row">
                                                        <div class="favorites-product-img">
                                                            <img src="/ImageProduct/Product/Thumb/@favorites.Product.ImageName">
                                                            <div class="product-rate">
                                                                <i class="fa fa-star active"></i>
                                                                <i class="fa fa-star active"></i>
                                                                <i class="fa fa-star active"></i>
                                                                <i class="fa fa-star active"></i>
                                                                <i class="fa fa-star active"></i>
                                                            </div>
                                                        </div>
                                                    </th>
                                                    <td>
                                                        <a href="#">
                                                            @favorites.Product.Name
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <span class="amount">
                                                            @favorites.Product.Price
                                                            <span>تومان</span>
                                                        </span>
                                                    </td>
                                                    <td class="text-left actions">
                                                        <a asp-area="user" asp-controller="Account" asp-action="RemoveUserFavorites" asp-route-id="@favorites.Id" class="remove-product">
                                                            <i class="mdi mdi-close"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

