@using Shop.Domain.Models.Production
@model List<ProductGallery>

@{
    ViewData["Title"] = "ShowProductGallery";
    var index = 1;
}
<meta name=robots content=noindex,nofollow>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                   
                        <br />
                        <br />
                        <br />
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">تصویر</th>
                                        <th scope="col">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gallery in Model)
                                    {
                                        <tr>
                                            <th scope="row">@index</th>
                                            <td>
                                                <img src="/ImageProduct/ProductGallery/Thumb/@gallery.ImageName" class="thumbnail" id="imgThumb" />
                                            </td>
                            
                                            <td>
                                             
                                                  <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Product" asp-action="DeleteProductGallery" asp-route-gallerId="@gallery.Id">حذف</a>
                        

                                            </td>
                                        </tr>
                                        index++;
                                    }

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <b>ایتمی وجود ندارد</b>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>