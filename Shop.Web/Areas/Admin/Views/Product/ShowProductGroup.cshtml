@model IEnumerable<Shop.Domain.Models.Production.ProductGroup>
@{
    ViewData["Title"] = "گروه محصولات";
}
<meta name=robots content=noindex,nofollow>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه  ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-area="Admin" asp-controller="Product" asp-action="CreateProductGroup" class="btn btn-success">افزودن گروه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان گروه</th>
                                    <th>عنوان بکتا</th>
                                    <th>زیر گروه ها</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.Where(g => g.ParentId == null))
                                {
                                <tr>
                                    <td>
                                        <img src="/ImageProduct/ImageGroup/Thumb/@group.ImageName" class="thumbnail" id="imgThumb" />
                                    </td>
                                    <td>@group.GroupTitle</td>
                                    <td>@group.UrlName</td>
                                    <td>
                                        @if (group.ProductGroups.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in group.ProductGroups)
                                                {
                                                    <li>
                                                        @sub.GroupTitle <a href="/Admin/Product/EditProductGroup/@sub.Id" class="btn btn-outline btn-warning btn-xs">
                                                            ویرایش
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Product/CreateProductGroup/@group.Id" class="btn btn-info btn-sm">
                                            زیر گروه
                                        </a>
                                        <a href="/Admin/Product/EditProductGroup/@group.Id" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>