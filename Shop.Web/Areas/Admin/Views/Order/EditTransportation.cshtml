@model Shop.Domain.ViewModels.Admin.Order.EditTransportationViewModel
@{
    ViewData["Title"] = "ویرایش هزینه حمل و نقل";
}

<meta name=robots content=noindex,nofollow>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کد تخفیف </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>عنوان </label>
            <input type="text" asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label>هزینه </label>
            <input type="number" asp-for="Amount" class="form-control">
            <span asp-validation-for="Amount"></span>
        </div>
        <div class="form-group">
            <label>حداقل خرید </label>
            <input type="number" asp-for="minBuy" class="form-control">
            <span asp-validation-for="minBuy"></span>
        </div>
        
        <div class="form-group">
            <label>وضعیت محصول</label>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsActive">
                    فعال
                </label>
            </div>
        </div>
        <input type="submit" value="ویرایش اطلاعات" class="btn btn-warning" />

    </form>
</div>

