@model Shop.Domain.Models.Orders.Transportation
@{
    ViewData["Title"] = "حمل و نقل";
}
<meta name=robots content=noindex,nofollow>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حمل و نقل</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
       
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>هزینه حمل و نقل</th>
                                    <th>حداقل خرید</th>                                   
                                    <th>فعال</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                              
                                    <tr>
                                        <td>@Model.Title</td>
                                        <td>@Model.Amount.ToString("0,#")</td>
                                        <td>@Model.minBuy.ToString("0,#")</td>
                                        <td>@Model.IsActive</td>
                                       
                                        <td>
                                            <a asp-area="Admin" asp-controller="Order" asp-action="EditTransportation" asp-route-transportationId="@Model.Id" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                        </td>
                                    </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


