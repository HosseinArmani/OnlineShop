@model Shop.Domain.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "بازیابی رمز عبور";
}
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="#" class="account-box-logo">tasland</a>
                        <div class="account-box">
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content">
                                    <h4 class="mb-2">فراموشی گذرواژه</h4>
                                    <p>گذرواژه خود را فراموش کرده اید؟ شماره موبایل یا ایمیل خود را وارد کنید.</p>
                                    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-account text-right">
                                        <div class="form-account-title">
                                            <label for="email-phone"> شماره موبایل</label>
                                            <input type="text" asp-for="PhoneNumber" class="number-email-input" id="email-phone">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Recaptcha</label>
                                            <div class="col-md-10">
                                                <div class="g-recaptcha" data-sitekey="6LeLlb8kAAAAAPCzmi_qZd3ozNxU6-6sBJbSNwsX"></div>
                                                <span class="text-danger">@ViewBag.Message</span>
                                            </div>
                                        </div>
                                        <div class="form-row-account">
                                            <button class="btn btn-primary btn-login">ارسال پیامک بازیابی رمز عبور</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
