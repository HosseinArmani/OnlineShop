@using Shop.Application.Utils;
@model Shop.Domain.Models.Articles.Article

<article class="post-item">
    <div class="post-thumb">
        <a asp-controller="Article" asp-action="ArticleDetail" asp-route-articleId="@Model.Id" class="d-block">
            <img src="/ImageArticle/Thumb/@Model.ImageName" alt="@Model.ArticleTitle" title="@Model.ArticleTitle">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a asp-controller="Article" asp-action="ArticleDetail" asp-route-articleId="@Model.Id">
                <h2 class="title-tag">
                    @Model.ArticleTitle
                </h2>
            </a>
        </div>
        <div class="excerpt">
            @Model.ShortDescription
        </div>
        <span class="post-date">
            <i class="fa fa-calendar"></i>
            @Model.CreateDate.ToStringShamsiDate();
        </span>
    </div>
</article>


