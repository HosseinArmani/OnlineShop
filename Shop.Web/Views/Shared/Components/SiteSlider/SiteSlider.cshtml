@model List<Shop.Domain.Models.Site.Slider>

<div class="d-block">
    <div class="mb-4">
        <div class="slider-main-container slider-mainR">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @foreach (var item in Model)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@item" class="active"></li>
                    }

                </ol>


                <div class="carousel-inner ">
                   
                        <div class="carousel-item active ">
                                <img src="/ImageSlider/NewSlider.png" class="d-block"
                                     alt="sliderProductMain">
                            </div>
                    

                    @foreach (var item in Model.Where(s => s.IsActive))
                    {

                        <div class="carousel-item ">
                            <a href="">
                                <img src="/ImageSlider/@item.SliderImageName" class="d-block"
                                     alt="sliderProductMain">
                            </a>
                        </div>

                    }
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                   data-slide="prev">
                    <span class="fa fa-angle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                   data-slide="next">
                    <span class="fa fa-angle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>
    </div>
</div>





